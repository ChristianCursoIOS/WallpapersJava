<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardUseCompatPadding="true"
    app:contentPadding="0.4dp"
    app:cardCornerRadius="8dp"><!--bacground sirve para dar animacion cuando damos click-->

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iV_categoria_dispositivo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"

            />

        <TextView
            android:id="@+id/tV_nombre_categoria_dispositivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nombre_categoria_dispositivo"
            android:textColor="@color/white"
            android:background="@color/teal_700"
            android:textSize="16sp"
            android:gravity="center"
            />



    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>